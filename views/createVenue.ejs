<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Venue</title>

    <link rel="icon" href="/images/mitsLogo.png">
    <link rel="stylesheet" href="/styles/navigationAdmin.css">
    <link rel="stylesheet" href="/styles/createVenue.css">
</head>
<body>

    <%- include('./partials/adminNavigate.ejs') %>

    <div class="content">

        <div class="header">
            <p>Create a Venue</p>

            <button onclick="location.reload()">
            <img src="/images/schedule.png" alt="new-venue">
            Create New Venue
            </button>
        </div>
        <hr>

        <div class="form-card">
            <form id="venue-form">

                <div class="form-group">
                    <input type="text" name="name" id="name" placeholder=" " required>
                    <label for="name">Venue Name</label>
                </div>

                <div class="form-group">
                    <input type="text" name="location" id="location" placeholder=" " required>
                    <label for="location">Location</label>
                </div>

                <div class="form-group">
                    <input type="number" name="capacity" id="capacity" placeholder=" " required>
                    <label for="capacity">Capacity</label>
                </div>

                <hr>
                <button type="submit">SUBMIT</button>
            </form>
        </div>

    </div>


    <script src="/scripts/createVenue.js"></script>
    
</body>
</html>